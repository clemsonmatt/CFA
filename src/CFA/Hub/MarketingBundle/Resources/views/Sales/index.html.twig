{% extends 'CFAHubSharedBundle:Shared:layout.html.twig' %}

{% block page_title %}
    Marketing
{% endblock %}

{% block breadcrumb %}
    <div class="cfa-breadcrumb">
        <a href="{{ path('cfa_hub_marketing_index') }}">
            Marketing
        </a>
        &raquo;
        Sales
    </div>
{% endblock %}

{% block content %}
    <div class="col-sm-12">
        <div class="panel panel-cfa">
            <div class="panel-heading">
                Search Orders
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-4" style="border-right: 2px dotted #eee;">
                        <h4>Search by date</h4>
                        <form method="post" action="{{ path('cfa_hub_marketing_sales_date_search') }}">
                            <input name="startDate" class="form-control datepicker" placeholder="Start Date" data-date-format="mm/dd/yyyy">
                            <input name="endDate" class="form-control datepicker" placeholder="End Date" style="margin-top: 10px;" data-date-format="mm/dd/yyyy">
                            <button type="submit" class="btn btn-default btn-sm pull-right" style="margin-top: 10px;">
                                Search
                            </button>
                        </form>
                    </div>
                    <div class="col-md-8">
                        <h4>Search by name</h4>
                        <input class="form-control" placeholder="Search...">
                        <button class="btn btn-default btn-sm pull-right" style="margin-top: 10px;">
                            Search
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {# upcomming sales #}
    <div class="col-sm-12">
        <div class="panel panel-cfa">
            <div class="panel-heading">
                Upcomming Sales
            </div>
            <div class="panel-body">
                <table class="table table-striped table-bordered table-hover pointer">
                    <thead>
                        <th class="col-sm-3">Pickup Date</th>
                        <th class="col-sm-3">Pickup Time</th>
                        <th class="col-sm-3">Customer</th>
                        <th class="col-sm-3">Total</th>
                    </thead>
                    {% for sale in sales %}
                        <tr class="js-row-click" data-url="{{ path('cfa_hub_marketing_sales_show', {'sale': sale.id}) }}">
                            <td>{{ sale.pickupDate|date('m/d/Y') }}</td>
                            <td>{{ sale.pickupTime|date('h:i A') }}</td>
                            <td>{{ sale.customer }}</td>
                            <td>${{ sale.total|number_format(2) }}</td>
                        </tr>
                    {% endfor %}
                </table>
            </div>
        </div>
    </div>
{% endblock %}
