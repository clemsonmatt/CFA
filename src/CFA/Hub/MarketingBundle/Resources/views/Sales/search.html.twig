{% extends 'CFAHubSharedBundle:Shared:layout.html.twig' %}

{% block page_title %}
    Marketing
{% endblock %}

{% block breadcrumb %}
    <div class="cfa-breadcrumb">
        <a href="{{ path('cfa_hub_marketing_index') }}">
            Marketing
        </a>
        &raquo;
        <a href="{{ path('cfa_hub_marketing_sales_index') }}">
            Sales
        </a>
        &raquo;
        {% if start_date is defined %}
            Date Search
        {% endif %}
    </div>
{% endblock %}

{% block content %}
    <div class="col-sm-12">
        <div class="panel panel-cfa">
            <div class="panel-heading">
                {% if start_date is defined %}
                    <div class="pull-right">
                        <a href="{{ path('cfa_hub_marketing_sales_printable_date_range', {'startDate': start_date|date('Y-m-d'), 'endDate': end_date|date('Y-m-d')}) }}" class="btn btn-sm btn-default">
                            {{ icon('print') }}
                        </a>
                    </div>
                    Date Search: {{ start_date|date('m/d/Y') }} &mdash; {{ end_date|date('m/d/Y') }}
                {% endif %}
            </div>
            <div class="panel-body">
                <table class="table table-striped table-bordered pointer">
                    <thead>
                        <th>Pickup Date</th>
                        <th>Pickup Time</th>
                        <th>Customer</th>
                        <th>Total</th>
                    </thead>
                    {% for sale in sales %}
                        <tr class="js-row-click" data-url="{{ path('cfa_hub_marketing_sales_show', {'sale': sale.id}) }}">
                            <td>{{ sale.pickupDate|date('m/d/Y') }}</td>
                            <td>{{ sale.pickupTime|date('h:i A') }}</td>
                            <td>{{ sale.customer }}</td>
                            <td>${{ sale.total|number_format(2) }}</td>
                        </tr>
                    {% endfor %}
                </table>
            </div>
        </div>
    </div>
{% endblock %}
